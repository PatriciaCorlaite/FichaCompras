@model FichaCompras.Models.Solicitacao

@{
    ViewData["Title"] = "Editar Solicitação";
}

<h1>Editar Solicitação</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Material" class="control-label"></label>
        <input asp-for="Material" class="form-control" />
        <span asp-validation-for="Material" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Quantidade" class="control-label"></label>
        <input asp-for="Quantidade" class="form-control" />
        <span asp-validation-for="Quantidade" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DataSolicitacao" class="control-label"></label>
        <input asp-for="DataSolicitacao" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label asp-for="Status" class="control-label"></label>
        <input asp-for="Status" class="form-control" />
    </div>
    <br />
    <button type="submit" class="btn btn-success">Salvar Alterações</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>